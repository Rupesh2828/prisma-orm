//SERIAL = autoincrement() both are same.they will add id by 1
//@id means its primary key

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  email     String  @unique
  firstname String?
  lastname  String?
  password  String
  todos     Todo[]
}

model Todo {
  id          Int     @id @default(autoincrement())
  title       String
  completed   Boolean  @default(false)
  description String?
  userId      Int
  user        User    @relation(fields: [userId], references: [id]) // Each Todo belongs to one User
}
